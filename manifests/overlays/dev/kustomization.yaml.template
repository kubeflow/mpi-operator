apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
resources:
- ../../base
- namespace.yaml
namespace: mpi-operator
commonLabels:
  kustomize.component: mpi-operator
  app: mpi-operator
  app.kubernetes.io/name: mpi-operator
  app.kubernetes.io/component: mpijob
images:
- name: mpioperator/mpi-operator
  newName: %IMAGE_NAME%
  newTag: %IMAGE_TAG%
patches:
- target:
    group: apps
    version: v1
    kind: Deployment
    name: mpi-operator
  path: ./patch.yaml
